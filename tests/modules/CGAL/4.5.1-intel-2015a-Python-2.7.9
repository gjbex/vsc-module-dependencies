#%Module

proc ModulesHelp { } {
    puts stderr {   The goal of the CGAL Open Source Project is to provide easy access to efficient 
 and reliable geometric algorithms in the form of a C++ library. - Homepage: http://www.cgal.org/
    }
}

module-whatis {Description: The goal of the CGAL Open Source Project is to provide easy access to efficient 
 and reliable geometric algorithms in the form of a C++ library. - Homepage: http://www.cgal.org/}

set root    /apps/leuven/thinking/2015a/software/CGAL/4.5.1-intel-2015a-Python-2.7.9

conflict CGAL

if { ![is-loaded intel/2015a] } {
    module load intel/2015a
}

if { ![is-loaded GMP/5.1.3-intel-2015a] } {
    module load GMP/5.1.3-intel-2015a
}

if { ![is-loaded Boost/1.57.0-intel-2015a-Python-2.7.9] } {
    module load Boost/1.57.0-intel-2015a-Python-2.7.9
}

if { ![is-loaded MPFR/3.1.2-intel-2015a] } {
    module load MPFR/3.1.2-intel-2015a
}

if { ![is-loaded Qt/4.8.6-intel-2015a] } {
    module load Qt/4.8.6-intel-2015a
}

prepend-path	CPATH		$root/include
prepend-path	LD_LIBRARY_PATH		$root/lib
prepend-path	LIBRARY_PATH		$root/lib
prepend-path	MANPATH		$root/share/man
prepend-path	PATH		$root/bin

setenv	EBROOTCGAL		"$root"
setenv	EBVERSIONCGAL		"4.5.1"
setenv	EBDEVELCGAL		"$root/easybuild/CGAL-4.5.1-intel-2015a-Python-2.7.9-easybuild-devel"


