prepend-path	MANPATH		$root/share/man
prepend-path	PATH		$root/bin

setenv	EBROOTBINUTILS		"$root"
setenv	EBVERSIONBINUTILS		"2.25"
setenv	EBDEVELBINUTILS		"$root/easybuild/binutils-2.25-GCC-4.9.2-easybuild-devel"


