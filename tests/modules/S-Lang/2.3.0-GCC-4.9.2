#%Module

proc ModulesHelp { } {
    puts stderr {   S-Lang is a multi-platform programmer's library designed to allow
 a developer to create robust multi-platform software. It provides facilities
 required by interactive applications such as display/screen management, keyboard
 input, keymaps, and so on. - Homepage: http://www.jedsoft.org/slang/
    }
}

module-whatis {Description: S-Lang is a multi-platform programmer's library designed to allow
 a developer to create robust multi-platform software. It provides facilities
 required by interactive applications such as display/screen management, keyboard
 input, keymaps, and so on. - Homepage: http://www.jedsoft.org/slang/}

set root    /apps/leuven/thinking/2015a/software/S-Lang/2.3.0-GCC-4.9.2

conflict S-Lang

if { ![is-loaded GCC/4.9.2] } {
    module load GCC/4.9.2
}

prepend-path	CPATH		$root/include
prepend-path	LD_LIBRARY_PATH		$root/lib
prepend-path	LIBRARY_PATH		$root/lib
prepend-path	MANPATH		$root/share/man
prepend-path	PATH		$root/bin
prepend-path	PKG_CONFIG_PATH		$root/lib/pkgconfig

setenv	EBROOTSMINLANG		"$root"
setenv	EBVERSIONSMINLANG		"2.3.0"
setenv	EBDEVELSMINLANG		"$root/easybuild/S-Lang-2.3.0-GCC-4.9.2-easybuild-devel"


