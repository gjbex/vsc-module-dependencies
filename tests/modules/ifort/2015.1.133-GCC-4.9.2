#%Module

proc ModulesHelp { } {
    puts stderr {   Fortran compiler from Intel - Homepage: http://software.intel.com/en-us/intel-compilers/
    }
}

module-whatis {Description: Fortran compiler from Intel - Homepage: http://software.intel.com/en-us/intel-compilers/}

set root    /apps/leuven/thinking/2015a/software/ifort/2015.1.133-GCC-4.9.2

conflict ifort

if { ![is-loaded GCC/4.9.2] } {
    module load GCC/4.9.2
}

prepend-path	LD_LIBRARY_PATH		$root/lib
prepend-path	LD_LIBRARY_PATH		$root/lib/intel64
prepend-path	LIBRARY_PATH		$root/lib
prepend-path	LIBRARY_PATH		$root/lib/intel64
prepend-path	MANPATH		$root/man
prepend-path	MANPATH		$root/man/en_US
prepend-path	PATH		$root/bin

setenv	EBROOTIFORT		"$root"
setenv	EBVERSIONIFORT		"2015.1.133"
setenv	EBDEVELIFORT		"$root/easybuild/ifort-2015.1.133-GCC-4.9.2-easybuild-devel"

prepend-path	INTEL_LICENSE_FILE		/apps/leuven/etc/licenses/USE_SERVER.lic
prepend-path	NLSPATH		$root/$root/idb/intel64/locale/%l_%t/%N

