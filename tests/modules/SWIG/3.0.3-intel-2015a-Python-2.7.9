#%Module

proc ModulesHelp { } {
    puts stderr {   SWIG is a software development tool that connects programs written in C and C++ with
 a variety of high-level programming languages. - Homepage: http://www.swig.org/
    }
}

module-whatis {Description: SWIG is a software development tool that connects programs written in C and C++ with
 a variety of high-level programming languages. - Homepage: http://www.swig.org/}

set root    /apps/leuven/thinking/2015a/software/SWIG/3.0.3-intel-2015a-Python-2.7.9

conflict SWIG

if { ![is-loaded intel/2015a] } {
    module load intel/2015a
}

if { ![is-loaded Python/2.7.9-intel-2015a] } {
    module load Python/2.7.9-intel-2015a
}

if { ![is-loaded PCRE/8.36-intel-2015a] } {
    module load PCRE/8.36-intel-2015a
}

prepend-path	MANPATH		$root/share/man
prepend-path	PATH		$root/bin

setenv	EBROOTSWIG		"$root"
setenv	EBVERSIONSWIG		"3.0.3"
setenv	EBDEVELSWIG		"$root/easybuild/SWIG-3.0.3-intel-2015a-Python-2.7.9-easybuild-devel"


