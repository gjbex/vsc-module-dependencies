#%Module

proc ModulesHelp { } {
    puts stderr {   Boost provides free peer-reviewed portable C++ source libraries. - Homepage: http://www.boost.org/
    }
}

module-whatis {Description: Boost provides free peer-reviewed portable C++ source libraries. - Homepage: http://www.boost.org/}

set root    /apps/leuven/thinking/2015a/software/Boost/1.57.0-intel-2015a-Python-2.7.9

conflict Boost

if { ![is-loaded intel/2015a] } {
    module load intel/2015a
}

if { ![is-loaded bzip2/1.0.6-intel-2015a] } {
    module load bzip2/1.0.6-intel-2015a
}

if { ![is-loaded zlib/1.2.8-intel-2015a] } {
    module load zlib/1.2.8-intel-2015a
}

if { ![is-loaded Python/2.7.9-intel-2015a] } {
    module load Python/2.7.9-intel-2015a
}

prepend-path	CPATH		$root/include
prepend-path	LD_LIBRARY_PATH		$root/lib
prepend-path	LIBRARY_PATH		$root/lib

setenv	EBROOTBOOST		"$root"
setenv	EBVERSIONBOOST		"1.57.0"
setenv	EBDEVELBOOST		"$root/easybuild/Boost-1.57.0-intel-2015a-Python-2.7.9-easybuild-devel"


